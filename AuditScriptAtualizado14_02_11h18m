function salvarRespostas() {
    let todasRespondidas = true; // Flag para verificar se todas foram respondidas

    let reauditado = document.getElementById("reauditado").value
    let areaauditada = document.getElementById("areaauditada").value

    console.log(reauditado)
    console.log(areaauditada)


    // Atualiza os motivos e contramedidas antes de enviar e verifica se todas foram respondidas
    respostas.forEach(resposta => {
        if (!resposta.resposta) { // Se alguma resposta estiver vazia
            todasRespondidas = false;
        } else if (resposta.resposta === "Não") { // Se a resposta for "Não", verifica o motivo e contramedida
            let motivoTextArea = document.getElementById(`motivo-texto_${resposta.perguntaId}`);
            let contramedidaTextArea = document.getElementById(`contramedida-texto_${resposta.perguntaId}`);
            if (motivoTextArea) {
                resposta.motivo = motivoTextArea.value.trim(); // Pega o motivo digitado
                if (!resposta.motivo) { // Se não tiver motivo, não deixa salvar
                    todasRespondidas = false;
                }
            } else {
                todasRespondidas = false; // Se não encontrar o campo do motivo
            }
            if (contramedidaTextArea) {
                resposta.contramedida = contramedidaTextArea.value.trim(); // Pega a contramedida digitado
                if (!resposta.contramedida) { // Se não tiver contramedida, não deixa salvar
                    todasRespondidas = false;
                }
            } else {
                todasRespondidas = false; // Se não encontrar o campo da contramedida
            }
        }
    });


    /*if (!todasRespondidas) {
        //alert("Por favor, responda todas as perguntas antes de salvar.");
        Swal.fire({
                          title: 'AVISO',
                          text: 'Por favor, responda todas as perguntas antes de registrar! ¹',
                          icon: 'warning',
                          showCancelButton: false,
                          confirmButtonColor: '#d33',
                          confirmButtonText: 'OK',
                          backdrop: false
                        });
        return; // Cancela o envio se houver respostas em branco
    }*/


    console.log("Respostas finais:", respostas); // Debug para conferir antes de enviar


    google.script.run.withSuccessHandler(function(response) {
        localStorage.clear(); // Remove todos os itens armazenados no localStorage


        if (response) {
            limparEresetar(); // Chama a função para resetar tudo
        } else {
            alert("Erro ao salvar as respostas.");
        }
    }).saveToSheetCheck(emailAtivo, respostas, reauditado, areaauditada);
}


function desbloquearTela() {
    document.getElementById('overlay').style.display = 'none';
    Swal.fire({
        title: 'CONCLUÍDO',
        text: 'Auditoria enviada com sucesso!',
        icon: 'success',
        showCancelButton: false,
        confirmButtonColor: '#34ebc9',
        confirmButtonText: 'OK',
        backdrop: false
    }).then((result) => {
        google.script.run.withSuccessHandler(refreshApp).getNewHtml();
    });
}


function limparEresetar() {
    bloquearTela();


    let timerInterval;
    Swal.fire({
        title: "Registrando!",
        html: "<b></b> kbps.",
        timer: 10000,
        timerProgressBar: true,
        didOpen: () => {
            Swal.showLoading();
            const timer = Swal.getPopup().querySelector("b");
            timerInterval = setInterval(() => {
                timer.textContent = `${Swal.getTimerLeft()}`;
            }, 200);
        },
        willClose: () => {
            clearInterval(timerInterval);
        }
    }).then((result) => {
        if (result.dismiss === Swal.DismissReason.timer) {
            console.log("Fechado por timer");
        }
        desbloquearTela();
    });
}






